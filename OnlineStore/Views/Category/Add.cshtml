@model CategoryViewModel
@using OnlineStore.Core.Models.Category;

@{
    ViewData["Title"] = "Add a Category";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Category Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Add" />
                <br />
                <a class="btn btn-warning" asp-controller="Category" asp-action="All">All Categories</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}